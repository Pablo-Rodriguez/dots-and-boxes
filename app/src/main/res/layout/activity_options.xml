<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dots_and_boxes.Options">



    <ImageView android:id="@+id/ImgFoto"
        android:layout_width="174dp"
        android:layout_height="123dp"
        android:src="@drawable/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.177" />

    <Button
        android:id="@+id/size1"
        android:layout_width="95dp"
        android:layout_height="36dp"
        android:layout_marginLeft="36dp"
        android:text="3x3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="128dp" />

    <Button
        android:id="@+id/size3"
        android:layout_width="95dp"
        android:layout_height="36dp"
        android:layout_marginLeft="17dp"
        android:text="5x5"
        app:layout_constraintLeft_toRightOf="@+id/size1"
        android:layout_marginRight="36dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.829"
        app:layout_constraintBaseline_toBaselineOf="@+id/size1" />

    <Button
        android:id="@+id/level1"
        android:layout_width="95dp"
        android:layout_height="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="8dp"
        android:text="Easy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.856"
        />

    <Button
        android:id="@+id/level2"
        android:layout_width="95dp"
        android:layout_height="36dp"
        android:layout_marginLeft="145dp"
        android:text="Medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/level1" />

    <Button
        android:id="@+id/level3"
        android:layout_width="95dp"
        android:layout_height="36dp"
        android:text="Difficult"
        android:layout_marginLeft="259dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/level1" />




</android.support.constraint.ConstraintLayout>
